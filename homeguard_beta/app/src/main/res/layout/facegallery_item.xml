<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout_gallery_item"
    android:padding="15dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_gallery_item"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/tv_name_gallery_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bird"
        android:layout_toRightOf="@+id/img_gallery_item"
        android:textColor="#FFF"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:textSize="15sp">
    </TextView>

    <TextView
        android:id="@+id/tv_date_gallery_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2000.20.20"
        android:layout_toRightOf="@+id/tv_name_gallery_item"
        android:textColor="#FFF"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:textSize="10sp">
    </TextView>

</RelativeLayout>