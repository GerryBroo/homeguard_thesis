<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.camera.CameraFragment">

    <FrameLayout
        android:id="@+id/layoutCameraPreview"
        android:layout_width="297dp"
        android:layout_height="279dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.060000002">

        <Button
            android:id="@+id/btnFlipCamera"
            android:layout_width="68dp"
            android:layout_height="65dp"
            android:layout_marginStart="229dp"
            android:layout_marginEnd="229dp"
            android:background="@drawable/ic_cameraswitch"
            android:backgroundTint="@color/teal_200"
            android:elevation="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_conversion_absoluteHeight="63dp"
            tools:layout_conversion_absoluteWidth="62dp" />

        <androidx.camera.view.PreviewView
            android:id="@+id/previewCamera"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/layoutRecognizedFace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutCameraPreview">

        <TextView
            android:id="@+id/txtRecognizedFaceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recognized_name" />

        <TextView
            android:id="@+id/txtRecognizedFace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Dein Name" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutRecognizedObject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutRecognizedFace">

        <TextView
            android:id="@+id/txtRecognizedObjectTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recognized_object" />

        <TextView
            android:id="@+id/txtRecognizedObject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Dein Objekt" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>